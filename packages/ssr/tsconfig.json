{
  "compilerOptions": {
    "target": "esnext",
    "module": "esNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts", "**/*test.ts"],
  "include": ["src"]
}