{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": false,
    "removeComments": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~app/*": [
        "src/app/*"
      ],
      "~config/*": [
        "src/config/*"
      ],
      "~shared/*": [
        "src/shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
}